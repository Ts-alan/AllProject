@using Crystal.Models
@using MvcApplication.Models
@model IEnumerable<Crystal.DomainModel.DefDistrData>

@{
    Layout = null;
    //string prodN = FoxRepo.GetProductionNumber();
    //string userName = HttpContext.Current.User.Identity.Name;
}

<script src="@Url.Content("~/Scripts/Tooltip.js")" type="text/javascript"></script>
<script type="text/javascript">
    $.get('@Url.Action("Sidemenu","Home")').success(function (result) { $('#SideMenu').html(result); });
    var $objKpr, $objNfl;
    $(document).ready(function() {
        $("#defDistrData").freezeTable({
            'autoHeight': false
        });
    });
</script>
<div style="margin-top: 25px">
    <table id ="defDistrData" class="table table-bordered table-condensed" style="width: auto">
        <colgroup>
                <col style="width: 21px" />
                <col style="width: 94px" />
                <col style="width: 74px" /> 
                <col style="width: 119px" />
                <col style="width: 89px" />       
        </colgroup>
        <thead>
            <tr>
                <td></td>
                <th>Номер партии</th>
                <th>Пластина</th>
                <th>Причина брака</th>
                <th>Дата брака</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                
                 <tr>
                    <td></td>
                    <td>@Html.ActionLink(item.Nprt.Substring(0, 5), "PartInfo", "Facility", new { NPRT = item.Nprt }, new { target = "_blank" })</td>
                    <td>@item.Npls</td>
                    <td>@item.Naprb</td>
                    <td>@item.Datbr</td>
                </tr>
                
            }
        </tbody>
    </table>
   
</div>

