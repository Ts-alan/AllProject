    @model Crystal.Models.LogOn
    @{
        Layout = null;
    }
<!DOCTYPE html>
<html>
<head>
    <title>Вход в АСУ кристального производства</title>
    @*<link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" type="text/css" />*@
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <style>
        body {
            background: #99C8FC;
            min-width: 800px;
            margin-top: 20px;
            /*min-height: 600px;*/
            font-size: 18px;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }

        .textSiteEntry {
            padding: 0px 20px 0 10px;
            text-align: center;
            letter-spacing: -1px;
            text-transform: lowercase;
            text-shadow: #808080 3px 4px 2px;
            font-family: Georgia, "Times New Roman", Times, serif;
            font-size: 40px;
            color: darkblue;
        }

        .leftimg {
            width: 270px;
            height: 100px;
            float: left; /* Выравнивание по левому краю */
            left: 0px;
            right: 0px;
            bottom: 0px;
            top: 0px;
        }

        .loginpromt {
            width: 100%;
            height: auto;
            font: bold 24px Arial, Helvetica, sans-serif;
            color: Black;
            text-shadow: #808080 3px 4px 2px;
        }

        #footer {
            position: fixed; /* Фиксированное положение */
            left: 0;
            bottom: 0; /* Левый нижний угол */
            z-index: -2;
            width: 100%; /* Ширина слоя */
        }
    </style>
</head>
<body id="EntryBody">
    <div style="height: 200px;">
        @Html.Partial("OldBrowser")
        <div id="leftimg">
            <img src="@Url.Content("~/Content/images/logo.png")" class="leftimg"  />
        </div>
        <h3 class="textSiteEntry">МОНИТОРИНГ КРИСТАЛЬНОГО ПРОИЗВОДСТВА</h3>
    </div>


    <div style="z-index: 4; text-align: center">
        @Html.ValidationSummary(true, "Не удалось выполнить вход. Исправьте ошибки и повторите попытку.", new { style = "color: red" })
        @using (Html.BeginForm())
        {
            <div class="loginpromt">
                Введите свои учётные данные<br />
                <br />

            </div>     
                    
            <div class="editor-field">
                @Html.LabelFor(m => m.Login) @Html.ValidationMessageFor(m => m.Login, "*")
                <div>
                    @Html.TextBoxFor(m => m.Login)
                </div>
            </div>
            
            <div class="editor-field">
                @Html.LabelFor(m => m.Passw) @Html.ValidationMessageFor(m => m.Passw, "*")
                <div>
                    @Html.TextBoxFor(m => m.Passw, new { type = "password" })
                </div>
            </div>

            <div class="editor-field">
                @Html.LabelFor(m => m.RememberMe)
                @Html.CheckBoxFor(m => m.RememberMe)
            </div>
               
            <noscript>
                <span style="background: darkorange">У Вас отключён JavaScript...Включите его!</span>
            </noscript>
            <input type="submit" value="Войти" />
            <p>
                <a href="@Url.Action("About")">О программе</a>
            </p>
            <p style="color: blue">
                Разработчик УИТ ОАО"Интеграл" тел.26-01,61-58
            </p>
           
        }
    </div>
    <div id="footer">
        <img src='@Url.Content("~/Content/images/SiteEntry/Footer.jpg")' style="width:100%" >
    </div>
</body>
</html>
