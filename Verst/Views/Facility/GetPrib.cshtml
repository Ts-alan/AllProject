@model IEnumerable<Verst.Models.Approaching>

@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/lighttable.js")" type="text/javascript"></script>
<h2>Приближающиеся партии</h2>
<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>Партия</th>
            <th>Код изделия</th>
            <th>Изделие</th>
            <th>С операции</th>
            <th>На операцию</th>
            <th>НЗП</th>
            <th>Глубина</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(@item.Nprt, "PartInfo", "Facility", new { Nprt = item.Nprt }, new { target = "_blank" })</td>
                <td>@item.Kpr</td>
                <td>@item.Napr</td>
                <td>@item.From</td>
                <td>@item.To</td>
                <td>@item.Kpls</td>
                <td>@item.Distance</td>
            </tr>
        }
    </tbody>
</table>
