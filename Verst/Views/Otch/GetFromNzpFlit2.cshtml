@model IEnumerable<Verst.Models.FlitPartNzp>
@using MvcApplication.Models
@using Verst.Models
@{
    Layout = null;
    string prodN = FoxRepo.GetProductionNumber();
    string userName = HttpContext.Current.User.Identity.Name;
}
<script src="@Url.Content("~/Scripts/Tooltip.js")" type="text/javascript"></script>
<div class="span6" style="margin-left: 5px">
    <div style="width:540px;margin-top: -20px">Постановка/снятие партии на кантроль по клику на символ <img src='../../Content/images/star_active.png'></img>/<img src='../../Content/images/star_passive.png'></div>
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th></th>
                <th>№ Партии</th>
                <th>№ Операции</th>
                <th>Наименование операции</th>
                <th>Время/Дата поступления</th>
                <th>Незавершёнка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:20px;*width: 20px">@Html.TrackThisBatch(item.Nprt,prodN,userName)</td>
                    <td>@Html.ActionLink(item.Nprt.Substring(0, 5), "PartInfo", "Facility", new { NPRT = item.Nprt }, new { target = "_blank" })</td>
                    <td>@item.Nop</td>
                    <td>@item.Naop</td>
                    <td>@item.Timo-@item.Dato</td>
                    <td>@item.Nzp</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.TrackThisBatchScript(prodN,userName)
</div>
