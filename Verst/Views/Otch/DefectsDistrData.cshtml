@using MvcApplication.Models
@using Verst.Models
@model IEnumerable<Verst.Models.DefDistrData>

@{
    Layout = null;
    string prodN = FoxRepo.GetProductionNumber();
    string userName = HttpContext.Current.User.Identity.Name;
}

<script src="@Url.Content("~/Scripts/Tooltip.js")" type="text/javascript"></script>
<div class="noprint" style="width:401px; height: 21px">
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <td style="width: 19px"></td>
                <th style="width: 94px">Номер партии</th>
                <th style="width: 74px">Пластина</th>
                <th style="width: 119px">Причина брака</th>
                <th style="width: 89px">Дата брака</th>
            </tr>
        </thead>
    </table>
</div>
<div class="scrollable"style="width:419px;height: 420px">
    <table class="table table-bordered table-condensed" style=" width: 401px;">
        <tbody>
            @foreach (var item in Model)
            {
                
                
                 <tr>
                    <td style="width: 19px;*width: 20px"></td>
                    <td style="width: 94px;">@Html.ActionLink(item.Nprt.Substring(0, 5), "PartInfo", "Facility", new { NPRT = item.Nprt }, new { target = "_blank" })</td>
                    <td style="width: 74px">@item.Npls</td>
                    <td style="width: 119px">@item.Naprb</td>
                    <td style="width: 89px">@item.Datbr</td>
                </tr>
                
            }
        </tbody>
    </table>
    @Html.TrackThisBatchScript(prodN, userName)
</div>

