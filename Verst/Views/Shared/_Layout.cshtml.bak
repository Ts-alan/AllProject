<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" id="MyCss"/>
    <link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/print.css")" rel="stylesheet" type="text/css" media="print"/>
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {
            var Nprt;
            $('#Search').keypress(function (e) {
                if (e.which == 13) {
                    Nprt = $("#Search").val();
                    $.ajax({
                        url: '@Url.Action("PrtSearch","Facility")',
                        type: 'POST',
                        data: { Nprt: Nprt },
                        traditional: true,
                        success: function (result) { success(result); }
                    });
                }
            });
        });

        function success(result) {
            $(".Content").html(result);
        }
    </script>

</head>
    <body>
        <div class="container-fluid">
                <div class="navbar">
                    <div align="center" class="navbar-inner">
                        <ul class="nav">
                            <li>@Html.ActionLink("Главная","Index","Home")</li>

                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Филиал  завод Транзистор<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Общая информация","All","Transistor")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Завод №3", "Zavod3", "Transistor", new { plant = "plant43"}, null)</li>
                                <li>@Html.ActionLink("Завод №4", "Zavod3", "Transistor", new { plant = "plant47" }, null)</li>
                            </ul>

                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Филиал Завод полупроводниковых приборов<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Общая информация", "All", "ZPP")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Завод №12", "Zavod3", "Transistor", new { plant = "plant12" }, null)</li>
                                <li>@Html.ActionLink("Завод №20", "Zavod20", "ZPP")</li>
                            </ul>


                            <li>@Html.ActionLink("Филиал НТЦ Белмикросистемы","Main","BMS")</li>
                            <li>@Html.ActionLink("GraphTest","Graph","Test")</li>
                        </ul>
               
                        <input type="text" class="navbar-search" placeholder="Поиск по партиям" id="Search"/>
                    </div>
                </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2">
                    @Html.Partial("_sidemenu")
                </div>

                <div class="span10">
                    @RenderBody()
                </div>
            </div>
        </div>
    </body>
</html>
