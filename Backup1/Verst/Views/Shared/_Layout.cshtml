<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @{
        HttpCookie cookie = HttpContext.Current.Request.Cookies.Get("SelectedCSS");
        if (cookie != null)
        {
            switch (cookie.Value)
            {
                case "Bootstrap":
                    <link href="@Url.Content("~/Content/bootstrap.css?version19.11.2013")" rel="stylesheet" type="text/css"/>
                    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css?version19.11.2013")" rel="stylesheet" type="text/css"/>
                           break;
                case "Custom":
                    <link href="@Url.Content("~/Content/AlterCSS.css")" rel="stylesheet" type="text/css"/>
                           break;
                default:
                    <link href="@Url.Content("~/Content/bootstrap.css?version19.11.2013")" rel="stylesheet" type="text/css"/>
                    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css?version19.11.2013")" rel="stylesheet" type="text/css"/>
                           break;
            }
        }
        else
        {
            <link href="@Url.Content("~/Content/bootstrap.css?version19.11.2013")" rel="stylesheet" type="text/css"/>
            <link href="@Url.Content("~/Content/bootstrap-responsive.min.css?version19.11.2013")" rel="stylesheet" type="text/css"/>
        }
    }
    
    
    <!--[if IE]><script language="javascript" type="text/javascript" src="@Url.Content("~/Scripts/excanvas.js")"></script><![endif]--> 
    @*<link href="@Url.Content("~/Content/print.css")" rel="stylesheet" type="text/css" media="print"/>*@
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js?version19.11.2013")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js?version19.11.2013")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Main.css?version19.11.2013")" rel="stylesheet" type="text/css" />
    @*Ajax navigation scripts*@
    <script src="@Url.Content("~/Scripts/history.min.js?version19.11.2013")" type="text/javascript"></script> 
    <script src="@Url.Content("~/Scripts/Navigator.js?version19.11.2013")" type="text/javascript"></script>

</head>
    <body style="min-width: 960px"><div  class="navbar" style="font-size: 16px;height: 40px">
          
            <ul id="menu_wrap" class="nav l_Blue " >

                @if (HttpContext.Current.User.IsInRole("plant43") || HttpContext.Current.User.IsInRole("plant47"))
                {
                    <li class="dropdown button" ><a class="dropdown-toggle" data-toggle="dropdown" href="" >Филиал "Транзистор"<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @if (HttpContext.Current.User.IsInRole("plant43"))
                            {<li>@Html.ActionLink("Производство №3", "Production", "Transistor", new { plant = "plant43" }, new { Class = "navigator" })</li>}
                            @if (HttpContext.Current.User.IsInRole("plant47"))
                            {<li>@Html.ActionLink("Производство №4", "Production", "Transistor", new { plant = "plant47" }, new { Class = "navigator" })</li>}
                        </ul></li>
                }
                @if (HttpContext.Current.User.IsInRole("plant12") || HttpContext.Current.User.IsInRole("plant20"))
                {
                    <li class="dropdown button" ><a class="dropdown-toggle" data-toggle="dropdown" href="#" >Филиал "ЗПП"<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @if (HttpContext.Current.User.IsInRole("plant12"))
                            {<li>@Html.ActionLink("Производство №12", "Production", "Transistor", new { plant = "plant12" }, new { Class = "navigator" })</li>}
                            @if (HttpContext.Current.User.IsInRole("plant20"))
                            {<li>@Html.ActionLink("Производство №20", "Production", "Transistor", new { plant = "plant20" }, new { Class = "navigator" })</li>}
                        </ul></li>
                }
                @if (HttpContext.Current.User.IsInRole("bms"))
                {
                    <li>@Html.ActionLink("НТЦ Белмикросистемы", "Production", "Transistor", new { plant = "bms" }, new { Class = "navigator" })</li>
                }
               
               
                <li class="dropdown button" style="float: right;margin-right: 45px" ><a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="caret"></i> Вы вошли как @Context.User.Identity.Name<b class=""></b></a>
                    <ul class="dropdown-menu" >
                        @if (HttpContext.Current.User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Управление пользователями", "UsersManagment", "Admin", null, new { Class = "navigator" })</li>
                        }
                        <li>@Html.ActionLink("Личный кабинет пользователя", "Cabinet", "User", new { username = Context.User.Identity.Name }, new { Class = "navigator" })</li>
                        <li>@Html.ActionLink("Выйти из рабочей программы   ", "LogOff", "Home")</li>
                    </ul></li>
            </ul>
        </div>
       
        <div id="SideMenu" class="Sidemenu"></div>
            
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12" id="Content">
                    @RenderBody()
                </div>
            </div>
        </div>

    </body>
</html>
