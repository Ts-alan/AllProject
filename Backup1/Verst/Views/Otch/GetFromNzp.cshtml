@using MvcApplication.Models
@using Verst.Models
@model IEnumerable<Verst.Models.Par>

@{
    Layout = null;
    string prodN = FoxRepo.GetProductionNumber();
    string userName = HttpContext.Current.User.Identity.Name;
}
<script src="@Url.Content("~/Scripts/Tooltip.js")" type="text/javascript"></script>
<script type="text/javascript">
    $.get('@Url.Action("Sidemenu","Home")').success(function (result) { $('#SideMenu').html(result); $('#SideMenu').show(); });
  
   
</script>
<div style="height: 41px">
    <table id ="Pr_table_3" class="table table-bordered table-condensed" style="table-layout:fixed; width: 525px;">
        <thead>
            <tr>
                <th style="width: 24px"></th>
                <th style="width: 59px">№ партии</th>
                <th style="width: 109px">Дата и время операции</th>
                <th style="width: 104px">Кол-во пластин</th>
                <th style="width: 124px">Дата формирования</th>
                <th style="width: 99px" >Оператор</th>
            </tr>
        </thead>
    </table>
</div >
<div class="scrollable" style="width: 543px;height: 400px" >
    <table class="table table-bordered table-condensed" style="table-layout:fixed;width:525px;">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:24px;">@Html.TrackThisBatch(item.Nprt, prodN, userName)</td>
                    <td style="width: 59px;">@Html.ActionLink(item.Nprt.Substring(0,5),"PartInfo","Facility", new { NPRT = item.Nprt}, new {target="_blank"})</td> @*Сдесь условия выборки*@
                    <td style="width: 109px; ">@item.Dato - @item.Timo</td>
                    <td style="width: 104px;">@item.Kpls</td>
                    <td style="width: 124px;">@item.Nprt.Substring(6)</td>
                    <td style="width: 99px;" >@item.Abon</td>
                </tr>
            }
        </tbody>
    </table>
   @Html.TrackThisBatchScript(prodN,userName)
</div>
<div style="width:540px">Постановка/снятие партии на кантроль по клику на символ <img src='../../Content/images/star_active.png'></img>/<img src='../../Content/images/star_passive.png'></div>
