@model System.Web.Mvc.HandleErrorInfo
           
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
    <body>
        <p>@ViewBag.Text</p>
        <p>@ViewBag.Solution</p>
        @{
            if (Model!=null && Model.Exception == null)
            {
                <h3>Exception:@Model.Exception.Message</h3>
                <h4>Exception:@Model.Exception.StackTrace</h4>
            }
        }
    </body>
</html>