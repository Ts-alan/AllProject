<h3>Месячная загрузка производства №@FoxRepo.GetProductionNumber() @ViewBag.Period</h3>
<div class="lighttable">
    <div style="float: left" >
        <table id ="Mzagr" class="table table-bordered table-condensed" style="width: auto">
            <colgroup>
                <col style="width: 120px" />
                <col style="width: 90px" />
                <col style="width: 85px" />    
                <col style="width: 85px" />
                <col style="width: 85px" />
                <col style="width: 85px" /> 
                <col style="width: 90px" />
            </colgroup>
            <thead>
                <tr>
                    <th>Участок</th>
                    <th>Оборудование</th>
                    <th>Количество пластин</th>
                    <th>Брак</th>
                    <th>Количество партий</th>
                    <th>Ремонт в часах</th>
                    <th>Коэф. раб. оборудования</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (IEnumerable<Crystal.DomainModel.LoadMth>)ViewBag.result)
                {
                    <tr>
                        <td>@item.Kuch</td>
                        <td>@item.Nobr</td>
                        <td>@item.Kpls</td>
                        <td>@item.Brk</td>
                        <td>@item.Nprt</td>
                        <td>@if(item.RepH != "0,00")
                            {
                                @Ajax.ActionLink(item.RepH, "ReasonsByUst", new {Nobr = item.Nobr}, new AjaxOptions {HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ReasonsContainer"})
                            }
                            else
                            {
                                @item.RepH
                            }
                        </td>
                        <td>@item.KrObr</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        if ((IEnumerable<Reasons>) ViewBag.result2 != null)
        {
            <div style="width: 370px;float: left;margin-left: 10px" id="ReasonsContainer">
                <table id="failreason" class="table table-bordered table-condensed center" style="width: auto">
                    <colgroup>
                        <col style="width: 150px" />
                        <col style="width: 120px" />
                        <col style="width: 60px" />    
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Причина</th>
                            <th>Кол-во отказов</th>
                            <th>Часы</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var it in (IEnumerable<Reasons>)ViewBag.result2)
                        {
                            <tr>
                                <td>@it.Napr</td>
                                <td>@it.SumN</td>
                                <td>@it.Hrs</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h5>Коэфициент работы оборудования по заводу =@ViewBag.reas</h5>
            </div>
        }
   @* else
    {
